- if layout
  - extends "ekklesia_portal/layout.j2.jade"

- block content
  h5.argument_title
    if details
      a(href=details_link)= title
    else
      = title

  if options.extended
    small.argument_abstract= abstract
    hr
    .argument_details_extended= (details or "")|markdown
  else
    p.argument_text= abstract

      if details
        a.read_more(href=details_link)
          |&nbsp;&nbsp;&gt;&gt;&gt;&nbsp;
          = _('read_on')|capitalize


