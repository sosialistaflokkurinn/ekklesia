if show_full_history
  if author
    .proposition_history_item
      = _("created_by", author=author.name)

  if created_at
    .proposition_history_item
      = _("created_on", date=created_at|dateformat)

.proposition_history_item
  if submitted_at
    = _('submitted_on', date=submitted_at|dateformat)
  else
    = _('submitted_no_date')
