#!/bin/bash
# =============================================================================
# Ekklesia Pre-Push Hook
# =============================================================================
# Simple sanity check before pushing - warns about potential issues
# Does NOT block pushes (gitignore handles sensitive files)
# =============================================================================

GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo -e "${GREEN}Running pre-push checks...${NC}"

# Everything sensitive is in .gitignore, so this hook just does sanity checks
# The .gitignore ensures sensitive files are never tracked

echo -e "${GREEN}Pre-push checks complete${NC}"
exit 0
