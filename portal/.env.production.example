# Ekklesia Portal - Production Environment Variables
# Copy to .env.production and fill in actual values

# Database Configuration
DB_PASSWORD=<generated-db-password>
DB_NAME=ekklesia_portal
CLOUD_SQL_CONNECTION=ekklesia-prod-10-2025:europe-west2:ekklesia-db

# Session Configuration
SESSION_SECRET_KEY=<generated-session-secret>

# Firebase Auth Integration (optional - for direct OAuth)
FIREBASE_CLIENT_ID=<firebase-web-app-client-id>
FIREBASE_CLIENT_SECRET=<firebase-api-key>

# Application Configuration
PORT=8080
EKKLESIA_PORTAL_CONFIG=/app/config.production.yml
