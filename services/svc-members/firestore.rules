rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function hasValidKennitala() {
      return isAuthenticated() &&
             request.auth.token.kennitala != null &&
             request.auth.token.kennitala.matches('^[0-9]{6}-?[0-9]{4}$');
    }

    function hasAdminRole() {
      return isAuthenticated() &&
             request.auth.token.roles is list &&
             'admin' in request.auth.token.roles;
    }

    function hasSuperuserRole() {
      return isAuthenticated() &&
             request.auth.token.roles is list &&
             'superuser' in request.auth.token.roles;
    }

    function hasAdminAccess() {
      return hasAdminRole() || hasSuperuserRole();
    }

    // Users collection
    match /users/{userId} {
      // Read: Only own profile
      allow read: if isOwner(userId);

      // Create: Only Cloud Functions (via Admin SDK)
      // Admin SDK bypasses these rules, so this blocks direct client access
      allow create: if false;

      // Update: Only own profile, limited fields
      // Users can only update their photo URL and last login timestamp
      allow update: if isOwner(userId) &&
                       request.resource.data.diff(resource.data)
                         .affectedKeys()
                         .hasOnly(['photoURL', 'lastLogin']);

      // Delete: Never allowed (soft delete via admin only)
      allow delete: if false;
    }

    // Sync logs collection (Epic #43)
    match /sync_logs/{logId} {
      // Read: Only admins and superusers can view sync logs
      allow read: if hasAdminAccess();

      // Write: Only Cloud Functions (via Admin SDK)
      allow write: if false;
    }

    // Events collection
    match /events/{eventId} {
      // Read: All authenticated members can view events
      allow read: if isAuthenticated();

      // Create/Update: Only admins and superusers can manage events
      allow create, update: if hasAdminAccess();

      // Delete: Only admins and superusers can delete events
      allow delete: if hasAdminAccess();
    }

    // Members collection (Epic #116)
    match /members/{kennitala} {
      // Read: Own profile (kennitala matches token) OR admin access
      allow read: if (hasValidKennitala() &&
                      request.auth.token.kennitala.replace('-', '') == kennitala) ||
                     hasAdminAccess();

      // Create: Only admins and superusers can create new members
      allow create: if hasAdminAccess();

      // Update: Own profile OR admin access (all fields)
      // Users can update their own profile (but not metadata, membership, address)
      allow update: if (hasValidKennitala() &&
                        request.auth.token.kennitala.replace('-', '') == kennitala) ||
                       hasAdminAccess();

      // Delete: Never allowed (soft delete via status field)
      allow delete: if false;
    }

    // Members audit log collection (Epic #116)
    match /members_audit_log/{logId} {
      // Read: Only admins and superusers can view audit logs
      allow read: if hasAdminAccess();

      // Write: Only Cloud Functions (via Admin SDK)
      // Client-side writes are blocked to ensure audit integrity
      allow write: if false;
    }

    // Nomination candidates metadata collection
    // Contains biographical information about candidates for nomination committee voting
    // ACCESS: Only via svc-elections API (Admin SDK) - no direct frontend access
    match /nomination-candidates/{candidateId} {
      // All access goes through svc-elections Cloud Run service
      // Frontend uses /api/candidates endpoints with Firebase Auth
      allow read, write: if false;
    }

    // ==============================================================================
    // EMAIL COLLECTIONS (Issue #323 - Postmark Integration)
    // ==============================================================================

    // Email templates collection
    match /email_templates/{templateId} {
      // Read: Only admins and superusers can view templates
      allow read: if hasAdminAccess();

      // Write: Only Cloud Functions (via Admin SDK)
      // All template CRUD goes through Cloud Functions for validation
      allow write: if false;
    }

    // Email campaigns collection
    match /email_campaigns/{campaignId} {
      // Read: Only admins and superusers can view campaigns
      allow read: if hasAdminAccess();

      // Write: Only Cloud Functions (via Admin SDK)
      // Campaign management goes through Cloud Functions
      allow write: if false;
    }

    // Email logs collection
    match /email_logs/{logId} {
      // Read: Only admins and superusers can view email logs
      allow read: if hasAdminAccess();

      // Write: Only Cloud Functions (via Admin SDK)
      // Logs are written by Cloud Functions and Postmark webhooks
      allow write: if false;
    }

    // Default: Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
